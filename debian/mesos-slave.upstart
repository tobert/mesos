# /etc/init/mesos-slave

description "Mesos slave"

start on runlevel [2345]
stop on shutdown

respawn
respawn limit 50 5

limit nofile 8192 8192

script
  [ -r /etc/default/mesos ] && . /etc/default/mesos
  exec /usr/sbin/mesos-slave \
    --quiet \
    --conf=$MESOS_CONFIG_DIR \
    --port=$MESOS_SLAVE_PORT
end script

