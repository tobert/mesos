# /etc/init/mesos-master

description "Mesos master"

start on runlevel [2345]
stop on shutdown

respawn
respawn limit 50 5

limit nofile 8192 8192

script
  [ -r /etc/default/mesos ] && . /etc/default/mesos
  exec /usr/sbin/mesos-master \
    --quiet \
    --conf=$MESOS_CONFIG_DIR \
    --port=$MESOS_MASTER_PORT
end script

